<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="Tulsi.SearchPage"
    xmlns="http://xamarin.com/schemas/2014/forms"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:controls="clr-namespace:Tulsi.Controls"
    xmlns:local="clr-namespace:Tulsi;assembly=Tulsi"
    xmlns:m="clr-namespace:SlideOverKit"
    xmlns:toolKitImageResourceExtension="clr-namespace:Tulsi.ToolKit.MarkupExtensions"
    NavigationPage.HasNavigationBar="false">

    <StackLayout x:Name="HeaderLayout" BackgroundColor="#DCDCDC">
        <!--  Tool bar  -->
        <Grid x:Name="ToolbarGrid" BackgroundColor="#2793F5">
            <Grid.RowDefinitions>
                <RowDefinition Height="50" />
            </Grid.RowDefinitions>

            <Label
                HorizontalOptions="Center"
                Text="SEARCH"
                TextColor="White"
                VerticalOptions="Center" />

            <Grid
                Padding="0,0,15,0"
                BackgroundColor="Transparent"
                HorizontalOptions="End">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="60" />
                </Grid.ColumnDefinitions>
                <Grid.GestureRecognizers>
                    <TapGestureRecognizer Command="{Binding ClosePageCommand}" />
                </Grid.GestureRecognizers>
                <Image
                    HeightRequest="20"
                    HorizontalOptions="End"
                    Source="{toolKitImageResourceExtension:ImageResourceExtension Source=Tulsi.Images.menu_close.png}"
                    VerticalOptions="Center"
                    WidthRequest="20" />
            </Grid>
        </Grid>

        <!--  MAIN CONTENT  -->
        <ScrollView>
            <StackLayout x:Name="MainLayout" BackgroundColor="Transparent">
                <Grid BackgroundColor="Transparent">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="170" />
                        <ColumnDefinition Width="170" />
                        <ColumnDefinition Width="*" />
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="auto" />
                        <RowDefinition Height="auto" />
                        <RowDefinition Height="auto" />
                    </Grid.RowDefinitions>
                    <Grid
                        x:Name="SearchBoxGrid"
                        Grid.Column="1"
                        Grid.ColumnSpan="2"
                        BackgroundColor="Transparent">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="340" />
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="auto" />
                        </Grid.RowDefinitions>
                        <Frame
                            CornerRadius="30"
                            HorizontalOptions="FillAndExpand"
                            VerticalOptions="FillAndExpand">
                            <controls:EntryEx
                                BackgroundColor="White"
                                BorderColor="#cccccc"
                                BorderRadius="50"
                                BorderWidth="2"
                                HeightRequest="50"
                                HorizontalOptions="CenterAndExpand"
                                Placeholder="Search..."
                                PlaceholderColor="#cccccc"
                                VerticalOptions="CenterAndExpand"
                                WidthRequest="320" />
                            <Image
                                HeightRequest="18"
                                HorizontalOptions="EndAndExpand"
                                Source="{toolKitImageResourceExtension:ImageResourceExtension Source=Tulsi.Images.search.png}"
                                VerticalOptions="CenterAndExpand"
                                WidthRequest="20" />
                        </Frame>
                    </Grid>
                    <controls:RoundedContentView
                        x:Name="BuyersArea"
                        Grid.Row="1"
                        Grid.Column="1"
                        Margin="0,20"
                        BackgroundColor="#027CE9"
                        CornerRadius="30"
                        HorizontalOptions="Center">
                        <controls:RoundedContentView.Content>
                            <Grid BackgroundColor="Transparent">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="150" />
                                </Grid.ColumnDefinitions>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="60" />
                                </Grid.RowDefinitions>
                                <Label
                                    x:Name="BuyersAreaLabel"
                                    HorizontalOptions="Center"
                                    Text="Buyers"
                                    TextColor="White"
                                    VerticalOptions="Center" />
                            </Grid>
                        </controls:RoundedContentView.Content>
                    </controls:RoundedContentView>
                    <controls:RoundedContentView
                        x:Name="GrowersArea"
                        Grid.Row="1"
                        Grid.Column="2"
                        Margin="0,20"
                        BackgroundColor="#FFFFFF"
                        CornerRadius="30"
                        HorizontalOptions="Center">
                        <controls:RoundedContentView.Content>
                            <Grid BackgroundColor="Transparent">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="150" />
                                </Grid.ColumnDefinitions>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="60" />
                                </Grid.RowDefinitions>
                                <Label
                                    x:Name="GrowersAreaLabel"
                                    HorizontalOptions="Center"
                                    Text="Growers"
                                    TextColor="#CCCCCC"
                                    VerticalOptions="Center" />
                            </Grid>
                        </controls:RoundedContentView.Content>
                    </controls:RoundedContentView>
                </Grid>
                <Frame
                    Grid.RowSpan="2"
                    Margin="30,0"
                    CornerRadius="20"
                    VerticalOptions="FillAndExpand">
                    <ListView
                        x:Name="menuItems"
                        Grid.Column="1"
                        Grid.ColumnSpan="2"
                        BackgroundColor="White"
                        ItemSelected="Handle_ItemSelected"
                        ItemsSource="{Binding Result}"
                        RowHeight="50"
                        SelectedItem="{Binding SelectedMenuItem, Mode=TwoWay}"
                        SeparatorVisibility="None"
                        VerticalOptions="CenterAndExpand">
                        <DataTemplate>
                            <ViewCell>
                                <ContentView>
                                    <Label
                                        FontSize="Micro"
                                        Text="{Binding Result}"
                                        TextColor="Green" />
                                </ContentView>
                            </ViewCell>
                        </DataTemplate>
                    </ListView>
                </Frame>
            </StackLayout>
        </ScrollView>
    </StackLayout>
</ContentPage>