<?xml version="1.0" encoding="utf-8" ?>
<m:MenuContainerPage
    x:Class="Tulsi.BuyerPage"
    xmlns="http://xamarin.com/schemas/2014/forms"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:controls="clr-namespace:Tulsi.Controls"
    xmlns:local="clr-namespace:Tulsi;assembly=Tulsi"
    xmlns:m="clr-namespace:SlideOverKit"
    xmlns:toolKitImageResourceExtension="clr-namespace:Tulsi.ToolKit.MarkupExtensions"
    NavigationPage.HasNavigationBar="false">

    <StackLayout x:Name="HeaderLayout" BackgroundColor="#DCDCDC">

        <!--  ActionBar  -->
        <Grid x:Name="ToolbarGrid" BackgroundColor="#2793F5">
            <Grid.RowDefinitions>
                <RowDefinition Height="50" />
            </Grid.RowDefinitions>
            <Grid
                Padding="15,0,0,0"
                BackgroundColor="Transparent"
                HorizontalOptions="Start">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="60" />
                </Grid.ColumnDefinitions>
                <Grid.GestureRecognizers>
                    <TapGestureRecognizer Tapped="ShowMenuTapped" />
                </Grid.GestureRecognizers>
                <Image
                    HorizontalOptions="Start"
                    Source="{toolKitImageResourceExtension:ImageResourceExtension Source=Tulsi.Images.menu.png}"
                    VerticalOptions="Center"
                    WidthRequest="20" />
            </Grid>

            <Label
                x:Name="PageTitleLabel"
                HorizontalOptions="Center"
                Text="BUYER"
                TextColor="White"
                VerticalOptions="Center" />

            <Grid
                Padding="0,0,15,0"
                BackgroundColor="Transparent"
                HorizontalOptions="End">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="60" />
                </Grid.ColumnDefinitions>
                <Grid.GestureRecognizers>
                    <TapGestureRecognizer Command="{Binding Path=DisplaySearchPageCommand}" />
                </Grid.GestureRecognizers>
                <Image
                    HeightRequest="20"
                    HorizontalOptions="End"
                    Source="{toolKitImageResourceExtension:ImageResourceExtension Source=Tulsi.Images.magnifier.png}"
                    VerticalOptions="Center"
                    WidthRequest="20" />
            </Grid>
        </Grid>

        <ScrollView>
            <AbsoluteLayout>
                <StackLayout x:Name="MainLayout" BackgroundColor="#DCDCDC">
                    <Grid Margin="5,0,5,0" BackgroundColor="Transparent">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="*" />

                        </Grid.ColumnDefinitions>

                        <controls:CustomFrame BackgroundColor="White" BorderRadius="25">

                            <Grid BackgroundColor="White">

                                <Grid.GestureRecognizers>

                                    <TapGestureRecognizer Command="{Binding Path=DisplayBuyerRankingsPageCommand}" />
                                </Grid.GestureRecognizers>

                                <Grid.ColumnDefinitions>

                                    <ColumnDefinition Width="*" />

                                    <ColumnDefinition Width="*" />
                                </Grid.ColumnDefinitions>

                                <Image
                                    HeightRequest="38"
                                    HorizontalOptions="Center"
                                    Source="{toolKitImageResourceExtension:ImageResourceExtension Source=Tulsi.Images.buyerranks.png}"
                                    VerticalOptions="Center"
                                    WidthRequest="40" />

                                <Label
                                    Grid.Column="1"
                                    Text="Buyer&#x0a;Ranks"
                                    TextColor="#2793F5" />
                            </Grid>
                        </controls:CustomFrame>

                        <controls:CustomFrame
                            Grid.Column="1"
                            BackgroundColor="White"
                            BorderRadius="25">

                            <Grid Grid.Column="1" BackgroundColor="White">

                                <Grid.GestureRecognizers>

                                    <TapGestureRecognizer Command="{Binding Path=DisplayLatePaymentsPageCommand}" />
                                </Grid.GestureRecognizers>

                                <Grid.ColumnDefinitions>

                                    <ColumnDefinition Width="*" />

                                    <ColumnDefinition Width="*" />
                                </Grid.ColumnDefinitions>

                                <Image
                                    HeightRequest="40"
                                    HorizontalOptions="Center"
                                    Source="{toolKitImageResourceExtension:ImageResourceExtension Source=Tulsi.Images.latepayments.png}"
                                    VerticalOptions="Center"
                                    WidthRequest="40" />

                                <Label
                                    Grid.Column="1"
                                    Text="Late&#x0a;Payments"
                                    TextColor="#2793F5" />
                            </Grid>
                        </controls:CustomFrame>
                    </Grid>


                    <controls:CustomFrame
                        Margin="5,0,5,0"
                        BackgroundColor="White"
                        BorderRadius="25">
                        <Grid BackgroundColor="White" HorizontalOptions="Center">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="*" />
                            </Grid.ColumnDefinitions>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="10" />
                                <RowDefinition Height="auto" />
                                <RowDefinition Height="auto" />
                                <RowDefinition Height="auto" />
                            </Grid.RowDefinitions>
                            <Label
                                Grid.ColumnSpan="2"
                                HorizontalTextAlignment="Center"
                                Text="BUYER SUMMARY"
                                VerticalTextAlignment="Center" />
                            <Grid
                                x:Name="ChartGrid"
                                Grid.Row="1"
                                Grid.RowSpan="4"
                                BackgroundColor="White"
                                VerticalOptions="Center">
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="auto" />
                                </Grid.RowDefinitions>
                            </Grid>
                            <Grid
                                Grid.Row="2"
                                Grid.Column="1"
                                BackgroundColor="White">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="10" />
                                    <ColumnDefinition Width="10" />
                                    <ColumnDefinition Width="auto" />
                                </Grid.ColumnDefinitions>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="auto" />
                                    <RowDefinition Height="auto" />
                                </Grid.RowDefinitions>
                                <controls:RoundedContentView
                                    Grid.RowSpan="2"
                                    BackgroundColor="#82DA69"
                                    CornerRadius="5"
                                    HeightRequest="8"
                                    WidthRequest="2" />
                                <Label
                                    Grid.Row="0"
                                    Grid.Column="2"
                                    FontSize="17"
                                    HorizontalOptions="Center"
                                    Text="Paid" />
                                <Label
                                    Grid.Row="1"
                                    Grid.Column="2"
                                    FontAttributes="Bold"
                                    FontSize="17"
                                    HorizontalOptions="Center"
                                    Text="23%" />
                            </Grid>
                            <Grid
                                Grid.Row="3"
                                Grid.Column="1"
                                BackgroundColor="White">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="10" />
                                    <ColumnDefinition Width="10" />
                                    <ColumnDefinition Width="auto" />
                                </Grid.ColumnDefinitions>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="auto" />
                                    <RowDefinition Height="auto" />
                                </Grid.RowDefinitions>
                                <controls:RoundedContentView
                                    Grid.RowSpan="2"
                                    BackgroundColor="#E47132"
                                    CornerRadius="5"
                                    HeightRequest="8"
                                    WidthRequest="2" />
                                <Label
                                    Grid.Row="0"
                                    Grid.Column="2"
                                    FontSize="17"
                                    Text="Over Due" />
                                <Label
                                    Grid.Row="1"
                                    Grid.Column="2"
                                    FontAttributes="Bold"
                                    FontSize="17"
                                    Text="5%" />
                            </Grid>
                            <Grid
                                Grid.Row="4"
                                Grid.Column="1"
                                BackgroundColor="White">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="10" />
                                    <ColumnDefinition Width="10" />
                                    <ColumnDefinition Width="auto" />
                                </Grid.ColumnDefinitions>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="auto" />
                                    <RowDefinition Height="auto" />
                                </Grid.RowDefinitions>
                                <controls:RoundedContentView
                                    Grid.RowSpan="2"
                                    BackgroundColor="#9EE5FC"
                                    CornerRadius="5"
                                    HeightRequest="8"
                                    WidthRequest="2" />
                                <Label
                                    Grid.Row="0"
                                    Grid.Column="2"
                                    FontSize="17"
                                    Text="Due" />
                                <Label
                                    Grid.Row="1"
                                    Grid.Column="2"
                                    FontAttributes="Bold"
                                    FontSize="17"
                                    Text="72%" />
                            </Grid>
                        </Grid>
                    </controls:CustomFrame>

                    <controls:CustomFrame
                        Margin="5,0,5,10"
                        BackgroundColor="White"
                        BorderRadius="25">
                        <Grid BackgroundColor="White">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="auto" />
                                <RowDefinition Height="*" />
                            </Grid.RowDefinitions>

                            <Label
                                HorizontalTextAlignment="Center"
                                Text="BUYER TRANSACTIONS"
                                VerticalTextAlignment="Center" />

                            <ListView
                                Grid.Row="1"
                                ItemsSource="{Binding Path=TransactionsData}"
                                RowHeight="50"
                                SelectedItem="{Binding Path=SelectedTransaction, Mode=TwoWay}"
                                SeparatorVisibility="None">

                                <ListView.ItemTemplate>

                                    <DataTemplate>

                                        <ViewCell>

                                            <controls:RoundedContentView
                                                Margin="20,10,10,10"
                                                BackgroundColor="#cccccc"
                                                CornerRadius="20">

                                                <controls:RoundedContentView.Content>

                                                    <Grid BackgroundColor="#cccccc" VerticalOptions="Center">

                                                        <Grid.ColumnDefinitions>

                                                            <ColumnDefinition Width="20" />

                                                            <ColumnDefinition Width="30" />

                                                            <ColumnDefinition Width="*" />

                                                            <ColumnDefinition Width="60" />

                                                            <ColumnDefinition Width="20" />
                                                        </Grid.ColumnDefinitions>

                                                        <Grid.RowDefinitions>

                                                            <RowDefinition Height="auto" />
                                                        </Grid.RowDefinitions>

                                                        <Label
                                                            Grid.Column="1"
                                                            HorizontalOptions="Center"
                                                            HorizontalTextAlignment="Start"
                                                            Text="{Binding Code}"
                                                            TextColor="White"
                                                            VerticalOptions="Center"
                                                            VerticalTextAlignment="Center" />

                                                        <Label
                                                            Grid.Column="2"
                                                            HorizontalOptions="Center"
                                                            HorizontalTextAlignment="Center"
                                                            Text="{Binding Number}"
                                                            TextColor="White"
                                                            VerticalOptions="Center"
                                                            VerticalTextAlignment="Center" />

                                                        <Label
                                                            Grid.Column="3"
                                                            HorizontalOptions="Center"
                                                            HorizontalTextAlignment="End"
                                                            Text="{Binding Quantity}"
                                                            TextColor="White"
                                                            VerticalOptions="Center"
                                                            VerticalTextAlignment="Center" />
                                                    </Grid>
                                                </controls:RoundedContentView.Content>
                                            </controls:RoundedContentView>
                                        </ViewCell>
                                    </DataTemplate>
                                </ListView.ItemTemplate>
                            </ListView>
                        </Grid>
                    </controls:CustomFrame>
                </StackLayout>
            </AbsoluteLayout>
        </ScrollView>
    </StackLayout>
</m:MenuContainerPage>

<!--<pageBase:PageWithSideMenuBase xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:controls="clr-namespace:Tulsi.Controls"
             xmlns:local="clr-namespace:Tulsi;assembly=Tulsi"
             xmlns:m="clr-namespace:SlideOverKit"
                     xmlns:pageBase="clr-namespace:Tulsi.Pages"
             x:Class="Tulsi.BuyerPage"
                     NavigationPage.HasNavigationBar="false">

  <StackLayout x:Name="HeaderLayout"
               BackgroundColor="#DCDCDC">
    <Grid x:Name="ToolbarGrid">
      <Grid.ColumnDefinitions>
        <ColumnDefinition Width="10" />
        <ColumnDefinition Width="20" />
        <ColumnDefinition Width="*" />
        <ColumnDefinition Width="20" />
        <ColumnDefinition Width="10" />
      </Grid.ColumnDefinitions>
      <Grid.RowDefinitions>
        <RowDefinition Height="50" />
      </Grid.RowDefinitions>
      <BoxView Color="#2793F5" Grid.ColumnSpan="5" />
      <Image x:Name="Menu" Source="{toolKitImageResourceExtension:ImageResourceExtension Source=Tulsi.Images.menu.png}"  Grid.Column="1" WidthRequest="20" HeightRequest="17" HorizontalOptions="Center" VerticalOptions="Center" />
      <Label Grid.Column="2" x:Name="PageTitleLabel" Text="BUYER" VerticalTextAlignment="Center" HorizontalTextAlignment="Center" TextColor="White" />
      <Image Grid.Column="3"  x:Name="Search"  WidthRequest="20" HeightRequest="20" HorizontalOptions="Center" VerticalOptions="Center" Source="{toolKitImageResourceExtension:ImageResourceExtension Source=Tulsi.Images.magnifier.png}" />
    </Grid>
    <ScrollView>
      <AbsoluteLayout>
        <StackLayout x:Name="MainLayout" BackgroundColor="#DCDCDC">
          <Grid BackgroundColor="Transparent" Margin="5,0,5,0">
            <Grid.ColumnDefinitions>
              <ColumnDefinition Width="*" />
              <ColumnDefinition Width="*" />

            </Grid.ColumnDefinitions>
            <controls:CustomFrame BorderRadius="25"  BackgroundColor="White">
              <Grid BackgroundColor="White">
                <Grid.ColumnDefinitions>
                  <ColumnDefinition Width="*" />
                  <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>
                <Image x:Name="Ranks"  WidthRequest="40" HeightRequest="38" HorizontalOptions="Center" VerticalOptions="Center" Source="{toolKitImageResourceExtension:ImageResourceExtension Source=Tulsi.Images.buyerranks.png}" />
                <Label x:Name="RanksLabel" Grid.Column="1" Text="Buyer&#x0a;Ranks" TextColor="#2793F5" />
              </Grid>
            </controls:CustomFrame>
            <controls:CustomFrame BorderRadius="25" BackgroundColor="White" Grid.Column="1">
              <Grid BackgroundColor="White" Grid.Column="1">
                <Grid.ColumnDefinitions>
                  <ColumnDefinition Width="*" />
                  <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>
                <Image x:Name="LatePayments"  WidthRequest="40" HeightRequest="40" HorizontalOptions="Center" VerticalOptions="Center" Source="{toolKitImageResourceExtension:ImageResourceExtension Source=Tulsi.Images.latepayments.png}" />
                <Label x:Name="LatePaymentsLabel" Grid.Column="1" Text="Late&#x0a;Payments" TextColor="#2793F5" />
              </Grid>
            </controls:CustomFrame>
          </Grid>


          <controls:CustomFrame BorderRadius="25" Margin="5,0,5,0" BackgroundColor="White" >
            <Grid HorizontalOptions="Center" BackgroundColor="White">
              <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
              </Grid.ColumnDefinitions>
              <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="10" />
                <RowDefinition Height="auto" />
                <RowDefinition Height="auto" />
                <RowDefinition Height="auto" />
              </Grid.RowDefinitions>
              <Label Text="BUYER SUMMARY" HorizontalTextAlignment="Center" VerticalTextAlignment="Center" Grid.ColumnSpan="2" />
              <Grid Grid.RowSpan="4" Grid.Row="1" x:Name="ChartGrid"  VerticalOptions="Center" BackgroundColor="White">
                <Grid.RowDefinitions>
                  <RowDefinition Height="auto" />
                </Grid.RowDefinitions>
              </Grid>
              <Grid Grid.Column="1" Grid.Row="2" BackgroundColor="White">
                <Grid.ColumnDefinitions>
                  <ColumnDefinition Width="10" />
                  <ColumnDefinition Width="10" />
                  <ColumnDefinition Width="auto" />
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                  <RowDefinition Height="auto" />
                  <RowDefinition Height="auto" />
                </Grid.RowDefinitions>
                <controls:RoundedContentView Grid.RowSpan="2" WidthRequest="2" HeightRequest="8" BackgroundColor="#82DA69" CornerRadius="5">
                </controls:RoundedContentView>
                <Label Grid.Column="2" Grid.Row="0" Text="Paid" FontSize="17" HorizontalOptions="Center" />
                <Label Grid.Column="2" Grid.Row="1" Text="23%" FontSize="17" FontAttributes="Bold" HorizontalOptions="Center"  />
              </Grid>
              <Grid Grid.Column="1" Grid.Row="3" BackgroundColor="White">
                <Grid.ColumnDefinitions>
                  <ColumnDefinition Width="10" />
                  <ColumnDefinition Width="10" />
                  <ColumnDefinition Width="auto" />
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                  <RowDefinition Height="auto" />
                  <RowDefinition Height="auto" />
                </Grid.RowDefinitions>
                <controls:RoundedContentView Grid.RowSpan="2" WidthRequest="2" HeightRequest="8" BackgroundColor="#E47132" CornerRadius="5">
                </controls:RoundedContentView>
                <Label Grid.Column="2" Grid.Row="0" Text="Over Due" FontSize="17" />
                <Label Grid.Column="2" Grid.Row="1" Text="5%" FontSize="17" FontAttributes="Bold" />
              </Grid>
              <Grid Grid.Column="1" Grid.Row="4" BackgroundColor="White">
                <Grid.ColumnDefinitions>
                  <ColumnDefinition Width="10" />
                  <ColumnDefinition Width="10" />
                  <ColumnDefinition Width="auto" />
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                  <RowDefinition Height="auto" />
                  <RowDefinition Height="auto" />
                </Grid.RowDefinitions>
                <controls:RoundedContentView Grid.RowSpan="2" WidthRequest="2" HeightRequest="8" BackgroundColor="#9EE5FC" CornerRadius="5">
                </controls:RoundedContentView>
                <Label Grid.Column="2" Grid.Row="0" Text="Due" FontSize="17" />
                <Label Grid.Column="2" Grid.Row="1" Text="72%" FontSize="17" FontAttributes="Bold" />
              </Grid>
            </Grid>
          </controls:CustomFrame>

          <controls:CustomFrame BorderRadius="25" Margin="5,0,5,10" BackgroundColor="White" >
            <Grid BackgroundColor="White">
              <Grid.RowDefinitions>
                <RowDefinition Height="auto" />
                <RowDefinition Height="*" />
              </Grid.RowDefinitions>
              <Label Text="BUYER TRANSACTIONS" HorizontalTextAlignment="Center" VerticalTextAlignment="Center"  />
              <ListView x:Name="TransactionsListView" SeparatorVisibility="None" RowHeight="50" ItemTapped="OnSelection" Grid.Row="1">
                <ListView.ItemTemplate>
                  <DataTemplate>
                    <ViewCell>
                      <controls:RoundedContentView BackgroundColor="#cccccc" CornerRadius="20" Margin="20,10,10,10">
                        <controls:RoundedContentView.Content>
                          <Grid VerticalOptions="Center" BackgroundColor="#cccccc">
                            <Grid.ColumnDefinitions>
                              <ColumnDefinition Width="20" />
                              <ColumnDefinition Width="30" />
                              <ColumnDefinition Width="*" />
                              <ColumnDefinition Width="60" />
                              <ColumnDefinition Width="20" />
                            </Grid.ColumnDefinitions>
                            <Grid.RowDefinitions>
                              <RowDefinition Height="auto" />
                            </Grid.RowDefinitions>
                            <Label Grid.Column="1" Text="{Binding Code}" HorizontalTextAlignment="Start" VerticalTextAlignment="Center" HorizontalOptions="Center" VerticalOptions="Center" TextColor="White" />
                            <Label Grid.Column="2" Text="{Binding Number}" HorizontalTextAlignment="Center" VerticalTextAlignment="Center" HorizontalOptions="Center" VerticalOptions="Center" TextColor="White" />
                            <Label Grid.Column="3" Text="{Binding Quantity}" HorizontalTextAlignment="End" VerticalTextAlignment="Center" HorizontalOptions="Center" VerticalOptions="Center" TextColor="White" />
                          </Grid>
                        </controls:RoundedContentView.Content>
                      </controls:RoundedContentView>
                    </ViewCell>
                  </DataTemplate>
                </ListView.ItemTemplate>
              </ListView>
            </Grid>
          </controls:CustomFrame>


        </StackLayout>
        <ContentView x:Name="SideMenuOverlay" AbsoluteLayout.LayoutFlags="WidthProportional,PositionProportional" IsVisible="False">
          <Grid x:Name="SideMenu" BackgroundColor="White">
            <Grid.ColumnDefinitions>
              <ColumnDefinition Width="20" />
              <ColumnDefinition Width="20" />
              <ColumnDefinition Width="10" />
              <ColumnDefinition Width="auto" />
              <ColumnDefinition Width="20" />
              <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
              <RowDefinition Height="auto" />
              <RowDefinition Height="35" />
              <RowDefinition Height="35" />
              <RowDefinition Height="35" />
              <RowDefinition Height="35" />
              <RowDefinition Height="35" />
              <RowDefinition Height="35" />
              <RowDefinition Height="35" />
              <RowDefinition Height="35" />
              <RowDefinition Height="*" />
            </Grid.RowDefinitions>
            <Grid x:Name="SideMenuHeader" Grid.ColumnSpan="6">
              <Grid.ColumnDefinitions>
                <ColumnDefinition Width="40" />
                <ColumnDefinition Width="auto" />
                <ColumnDefinition Width="20" />
                <ColumnDefinition Width="auto" />
                <ColumnDefinition Width="*" />
              </Grid.ColumnDefinitions>
              <Grid.RowDefinitions>
                <RowDefinition Height="20" />
                <RowDefinition Height="20" />
                <RowDefinition Height="20" />
                <RowDefinition Height="15" />
              </Grid.RowDefinitions>
              <BoxView Color="#2793F5" Grid.ColumnSpan="5" Grid.RowSpan="5" />
              <Label Grid.Column="1" Grid.Row="1"  x:Name="SideMenuHeaderTitleLabel" Text="Profitable" VerticalTextAlignment="End" TextColor="White" />
              <Label Grid.Column="1" Grid.Row="2" x:Name="SideMenuDescriptionTitleLabel" VerticalTextAlignment="Start" Text="20,000,000 Approx" FontSize="10" FontAttributes="Bold" TextColor="White" />
              <Image Grid.Column="3" Grid.Row="1"  Grid.RowSpan="2" x:Name="SideMenuHeaderProfitIcon" WidthRequest="40" HeightRequest="40" Source="{toolKitImageResourceExtension:ImageResourceExtension Source=Tulsi.Images.menu_profitability.png}" />
              <Image Grid.Column="4" Grid.Row="0" HorizontalOptions="End" VerticalOptions="Start" x:Name="SideMenuHeaderCloseIcon" WidthRequest="20" HeightRequest="20" Source="{toolKitImageResourceExtension:ImageResourceExtension Source=Tulsi.Images.menu_close.png}" Margin="0,5,5,0" />
            </Grid>
            <Image Grid.Column="1" Grid.Row="2" HorizontalOptions="Center" VerticalOptions="Center" x:Name="BuyerMenuIcon" WidthRequest="20" HeightRequest="20"  Source="{toolKitImageResourceExtension:ImageResourceExtension Source=Tulsi.Images.menu_buyer.png}" />
            <Image Grid.Column="1" Grid.Row="3" HorizontalOptions="Center" VerticalOptions="Center" x:Name="GrowerMenuIcon" WidthRequest="20" HeightRequest="20"  Source="{toolKitImageResourceExtension:ImageResourceExtension Source=Tulsi.Images.menu_grower.png}" />
            <Image Grid.Column="1" Grid.Row="4" HorizontalOptions="Center" VerticalOptions="Center" x:Name="AuditLogMenuIcon" WidthRequest="20" HeightRequest="20"  Source="{toolKitImageResourceExtension:ImageResourceExtension Source=Tulsi.Images.menu_audit.png}" />
            <Image Grid.Column="1" Grid.Row="5" HorizontalOptions="Center" VerticalOptions="Center" x:Name="ReportMenuIcon" WidthRequest="20" HeightRequest="20"  Source="{toolKitImageResourceExtension:ImageResourceExtension Source=Tulsi.Images.menu_report.png}" />
            <Image Grid.Column="1" Grid.Row="6" HorizontalOptions="Center" VerticalOptions="Center" x:Name="ChatMenuIcon" WidthRequest="20" HeightRequest="20"  Source="{toolKitImageResourceExtension:ImageResourceExtension Source=Tulsi.Images.menu_chat.png}" />
            <Image Grid.Column="1" Grid.Row="7" HorizontalOptions="Center" VerticalOptions="Center" x:Name="SettingsMenuIcon" WidthRequest="20" HeightRequest="20" Source="{toolKitImageResourceExtension:ImageResourceExtension Source=Tulsi.Images.menu_settings.png}" />
            <Image Grid.Column="1" Grid.Row="8" HorizontalOptions="Center" VerticalOptions="Center" x:Name="MeMenuIcon" WidthRequest="20" HeightRequest="20" Source="{toolKitImageResourceExtension:ImageResourceExtension Source=Tulsi.Images.menu_me.png}" />
            <Label Grid.Column="3" Grid.Row="1" x:Name="DashboardMenuItem" Text="Dashboard" Style="{StaticResource MenuItemStyleLabel}" />
            <Label Grid.Column="3" Grid.Row="2" x:Name="BuyerMenuItem" Text="Buyer" Style="{StaticResource MenuItemStyleLabel}" />
            <Label Grid.Column="3" Grid.Row="3" x:Name="GrowerMenuItem" Text="Grower" Style="{StaticResource MenuItemStyleLabel}" />
            <Label Grid.Column="3" Grid.Row="4" x:Name="AuditLogMenuItem" Text="Audit Log" Style="{StaticResource MenuItemStyleLabel}" />
            <Label Grid.Column="3" Grid.Row="5" x:Name="ReportMenuItem" Text="Report" Style="{StaticResource MenuItemStyleLabel}" />
            <Label Grid.Column="3" Grid.Row="6" x:Name="ChatMenuItem" Text="Chat" Style="{StaticResource MenuItemStyleLabel}" />
            <Label Grid.Column="3" Grid.Row="7" x:Name="SettingsMenuItem" Text="Settings" Style="{StaticResource MenuItemStyleLabel}" />
            <Label Grid.Column="3" Grid.Row="8" x:Name="MeMenuItem" Text="Me" Style="{StaticResource MenuItemStyleLabel}" />
