                                        WidthRequest="4" />
                                    <BoxView
                                        HeightRequest="1"
                                        HorizontalOptions="FillAndExpand"
                                        VerticalOptions="Center"
                                        Color="#cccccc" />
                                </StackLayout>

                                <controls:ExtendedContentView
                                    Grid.Row="1"
                                    Grid.Column="2"
                                    BackgroundColor="#cccccc"
                                    CornerRadius="15"
                                    HeightRequest="30">
