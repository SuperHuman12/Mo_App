<?xml version="1.0" encoding="utf-8" ?>
<m:MenuContainerPage
    x:Class="Tulsi.DashboardPage"
    xmlns="http://xamarin.com/schemas/2014/forms"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:chart="clr-namespace:Syncfusion.SfChart.XForms;assembly=Syncfusion.SfChart.XForms"
    xmlns:controls="clr-namespace:Tulsi.Controls"
    xmlns:listview="clr-namespace:Syncfusion.ListView.XForms;assembly=Syncfusion.SfListView.XForms"
    xmlns:local="clr-namespace:Tulsi;assembly=Tulsi"
    xmlns:m="clr-namespace:SlideOverKit"
    xmlns:toolKitImageResourceExtension="clr-namespace:Tulsi.ToolKit.MarkupExtensions"
    BackgroundColor="{StaticResource MainColor}"
    NavigationPage.HasNavigationBar="false">

    <Grid>
        <StackLayout x:Name="HeaderLayout" BackgroundColor="#DCDCDC">

            <!--  Tool bar  -->
            <Grid x:Name="ToolbarGrid" BackgroundColor="#2793F5">
                <Grid.RowDefinitions>
                    <RowDefinition Height="50" />
                </Grid.RowDefinitions>
                <Grid
                    Padding="15,0,0,0"
                    BackgroundColor="Transparent"
                    HorizontalOptions="Start">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="60" />
                    </Grid.ColumnDefinitions>
                    <Grid.GestureRecognizers>
                        <TapGestureRecognizer Tapped="ShowMenuCommand" />
                    </Grid.GestureRecognizers>
                    <Image
                        HorizontalOptions="Start"
                        Source="{toolKitImageResourceExtension:ImageResourceExtension Source=Tulsi.Images.menu.png}"
                        VerticalOptions="Center"
                        WidthRequest="20" />
                </Grid>

                <Label
                    x:Name="PageTitleLabel"
                    HorizontalOptions="Center"
                    Text="DASHBOARD"
                    TextColor="White"
                    VerticalOptions="Center" />

                <Grid
                    Padding="0,0,15,0"
                    BackgroundColor="Transparent"
                    HorizontalOptions="End">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="60" />
                    </Grid.ColumnDefinitions>
                    <Grid.GestureRecognizers>
                        <TapGestureRecognizer Command="{Binding DisplaySearchPageCommand}" />
                    </Grid.GestureRecognizers>
                    <Image
                        HeightRequest="20"
                        HorizontalOptions="End"
                        Source="{toolKitImageResourceExtension:ImageResourceExtension Source=Tulsi.Images.magnifier.png}"
                        VerticalOptions="Center"
                        WidthRequest="20" />
                </Grid>
            </Grid>

            <controls:PullToRefreshLayout
                IsRefreshing="{Binding Path=IsRefreshing, Mode=OneWay}"
                RefreshColor="##2793F5"
                RefreshCommand="{Binding Path=RefreshCommand}">
                <!--  Main content  -->
                <ScrollView x:Name="scrolView">
                    <StackLayout x:Name="MainLayout" BackgroundColor="#DCDCDC">
                        <controls:ExtendedContentView
                            Margin="5,0"
                            Padding="5"
                            BackgroundColor="White"
                            CornerRadius="10">
                            <Grid BackgroundColor="Transparent">
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="*" />
                                </Grid.RowDefinitions>
                                <Label
                                    HorizontalTextAlignment="Center"
                                    Text="Thought of the Day&#x0a;&quot; Lack of money is the root of all evil &quot;"
                                    VerticalTextAlignment="Center" />
                                <Label
                                    x:Name="tempLabel"
                                    BackgroundColor="White"
                                    FontSize="Large"
                                    HorizontalOptions="Fill"
                                    HorizontalTextAlignment="Center"
                                    Text="Hello UserName"
                                    VerticalOptions="Fill"
                                    VerticalTextAlignment="Center" />
                            </Grid>
                        </controls:ExtendedContentView>

                        <!--  BUYER SUMMARY  -->
                        <controls:ExtendedContentView
                            Margin="5,0,5,0"
                            Padding="5"
                            BackgroundColor="White"
                            CornerRadius="10"
                            IsVisible="{Binding HasBuyerSummary}">
                            <controls:ExtendedContentView.GestureRecognizers>
                                <TapGestureRecognizer Command="{Binding DisplayBuyerPageCommand}" />
                            </controls:ExtendedContentView.GestureRecognizers>

                            <Grid BackgroundColor="Transparent" HorizontalOptions="Center">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*" />
                                    <ColumnDefinition Width="*" />
                                </Grid.ColumnDefinitions>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto" />
                                    <RowDefinition Height="10" />
                                    <RowDefinition Height="auto" />
                                    <RowDefinition Height="auto" />
                                    <RowDefinition Height="auto" />
                                </Grid.RowDefinitions>

                                <Label
                                    Grid.ColumnSpan="2"
                                    HorizontalTextAlignment="Center"
                                    Text="BUYER SUMMARY"
                                    VerticalTextAlignment="Center" />

                                <!--  Chart Grid  -->
                                <Grid
                                    x:Name="ChartGrid"
                                    Grid.Row="1"
                                    Grid.RowSpan="4"
                                    BackgroundColor="Transparent"
                                    VerticalOptions="Center">
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="auto" />
                                    </Grid.RowDefinitions>
                                </Grid>

                                <Grid
                                    Grid.Row="2"
                                    Grid.Column="1"
                                    BackgroundColor="Transparent">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="10" />
                                        <ColumnDefinition Width="10" />
                                        <ColumnDefinition Width="auto" />
                                    </Grid.ColumnDefinitions>
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="auto" />
                                        <RowDefinition Height="auto" />
                                    </Grid.RowDefinitions>

                                    <controls:ExtendedContentView
                                        Grid.RowSpan="2"
                                        BackgroundColor="#82DA69"
                                        CornerRadius="5"
                                        HeightRequest="8"
                                        WidthRequest="2" />
                                    <Label
                                        Grid.Row="0"
                                        Grid.Column="2"
                                        FontSize="17"
                                        HorizontalOptions="Center"
                                        Text="Paid" />
                                    <Label
                                        Grid.Row="1"
                                        Grid.Column="2"
                                        FontAttributes="Bold"
                                        FontSize="17"
                                        HorizontalOptions="Center"
                                        Text="23%" />
                                </Grid>
                                <Grid
                                    Grid.Row="3"
                                    Grid.Column="1"
                                    BackgroundColor="Transparent">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="10" />
                                        <ColumnDefinition Width="10" />
                                        <ColumnDefinition Width="auto" />
                                    </Grid.ColumnDefinitions>
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="auto" />
                                        <RowDefinition Height="auto" />
                                    </Grid.RowDefinitions>

                                    <controls:ExtendedContentView
                                        Grid.RowSpan="2"
                                        BackgroundColor="#E47132"
                                        CornerRadius="5"
                                        HeightRequest="8"
                                        WidthRequest="2" />
                                    <Label
                                        Grid.Row="0"
                                        Grid.Column="2"
                                        FontSize="17"
                                        Text="Over Due" />
                                    <Label
                                        Grid.Row="1"
                                        Grid.Column="2"
                                        FontAttributes="Bold"
                                        FontSize="17"
                                        Text="5%" />
                                </Grid>

                                <Grid
                                    Grid.Row="4"
                                    Grid.Column="1"
                                    BackgroundColor="Transparent">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="10" />
                                        <ColumnDefinition Width="10" />
                                        <ColumnDefinition Width="auto" />
                                    </Grid.ColumnDefinitions>
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="auto" />
                                        <RowDefinition Height="auto" />
                                    </Grid.RowDefinitions>

                                    <controls:ExtendedContentView
                                        Grid.RowSpan="2"
                                        BackgroundColor="#9EE5FC"
                                        CornerRadius="5"
                                        HeightRequest="8"
                                        WidthRequest="2" />
                                    <Label
                                        Grid.Row="0"
                                        Grid.Column="2"
                                        FontSize="17"
                                        Text="Due" />
                                    <Label
                                        Grid.Row="1"
                                        Grid.Column="2"
                                        FontAttributes="Bold"
                                        FontSize="17"
                                        Text="72%" />
                                </Grid>
                            </Grid>
                        </controls:ExtendedContentView>

                        <!--  TODAYS RATES  -->
                        <controls:ExtendedContentView
                            Margin="5,0"
                            Padding="10,5"
                            BackgroundColor="White"
                            CornerRadius="10"
                            IsVisible="{Binding HasTodayRates}">
