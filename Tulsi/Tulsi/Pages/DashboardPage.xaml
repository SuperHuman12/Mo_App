                                    Grid.Column="2"
                                    BackgroundColor="#cccccc"
                                    CornerRadius="15"
                                    HeightRequest="30">
                                    <Label
                                        FontAttributes="Bold"
                                        HorizontalTextAlignment="Center"
                                        Text="182.68"
                                        TextColor="White" />
                                </controls:ExtendedContentView>
                            </Grid>
                        </controls:ExtendedContentView>

                        <!--  LADDAN/COLD STOIRE/TODAYS BALANCE  -->
