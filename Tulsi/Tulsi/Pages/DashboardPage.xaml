                                        WidthRequest="4" />
                                    <BoxView
                                        HeightRequest="1"
                                        HorizontalOptions="FillAndExpand"
                                        VerticalOptions="Center"
                                        Color="#cccccc" />
                                </StackLayout>
                                <StackLayout
                                    Grid.Row="2"
                                    Grid.Column="1"
                                    Orientation="Horizontal">
                                    <Image
                                        HeightRequest="4"
                                        Source="{toolKitImageResourceExtension:ImageResourceExtension Source=Tulsi.Images.graycircle.png}"
                                        VerticalOptions="Center"
                                        WidthRequest="4" />
                                    <BoxView
                                        HeightRequest="1"
                                        HorizontalOptions="FillAndExpand"
                                        VerticalOptions="Center"
                                        Color="#cccccc" />
                                </StackLayout>
                                <StackLayout
                                    Grid.Row="3"
                                    Grid.Column="1"
                                    Orientation="Horizontal">
                                    <Image
                                        HeightRequest="4"
