                            Margin="5,0"
                            Padding="5"
                            BackgroundColor="White"
                            CornerRadius="10"
                            HeightRequest="80">
                            <StackLayout
                                BackgroundColor="Transparent"
                                Orientation="Horizontal"
                                Spacing="0">
                                <!--  LADAAN FRAME  -->
                                <controls:ExtendedContentView
                                    BorderColor="#CCCCCC"
                                    BorderThickness="2"
                                    CornerRadius="10"
                                    HorizontalOptions="CenterAndExpand"
                                    IsVisible="{Binding HasLadaan}">
                                    <controls:ExtendedContentView.GestureRecognizers>
                                        <TapGestureRecognizer Command="{Binding DisplayLaddanPageCommand}" />
                                    </controls:ExtendedContentView.GestureRecognizers>

                                    <Grid
                                        BackgroundColor="Transparent"
                                        HorizontalOptions="Center"
                                        RowSpacing="0"
                                        VerticalOptions="Center">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="90" />
                                        </Grid.ColumnDefinitions>
                                        <Grid.RowDefinitions>
                                            <RowDefinition Height="20" />
                                            <RowDefinition Height="40" />
                                        </Grid.RowDefinitions>
                                        <Label
                                            Grid.Row="0"
                                            FontAttributes="Bold"
                                            FontSize="12"
                                            HorizontalOptions="Center"
                                            Text="Laddan/Bijak"
                                            VerticalOptions="End" />
                                        <Label
                                            Grid.Row="1"
                                            FontSize="30"
                                            HorizontalOptions="Center"
                                            Text="5"
                                            VerticalOptions="Start" />
                                    </Grid>
                                </controls:ExtendedContentView>

                                <!--  COLD STOIRE FRAME  -->
                                <controls:ExtendedContentView
                                    BorderColor="#CCCCCC"
                                    BorderThickness="2"
                                    CornerRadius="10"
                                    HorizontalOptions="CenterAndExpand"
                                    IsVisible="{Binding HasColdStoire}">
                                    <controls:ExtendedContentView.GestureRecognizers>
                                        <TapGestureRecognizer Command="{Binding DisplayColdStorePageCommand}" />
                                    </controls:ExtendedContentView.GestureRecognizers>

                                    <Grid
                                        BackgroundColor="Transparent"
                                        HorizontalOptions="Center"
                                        RowSpacing="0"
                                        VerticalOptions="Center">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="90" />
                                        </Grid.ColumnDefinitions>
                                        <Grid.RowDefinitions>
                                            <RowDefinition Height="20" />
                                            <RowDefinition Height="40" />
                                        </Grid.RowDefinitions>
                                        <Label
                                            Grid.Row="0"
                                            FontAttributes="Bold"
                                            FontSize="12"
                                            HorizontalOptions="Center"
                                            Text="ColdStoire"
                                            VerticalOptions="End" />
                                        <Label
                                            Grid.Row="1"
                                            FontSize="30"
                                            HorizontalOptions="Center"
                                            Text="2450"
                                            VerticalOptions="Start" />
                                    </Grid>
                                </controls:ExtendedContentView>

                                <!--  TODAY'S BALANCE FRAME  -->
                                <controls:ExtendedContentView
                                    BorderColor="#CCCCCC"
                                    BorderThickness="2"
                                    CornerRadius="10"
                                    HorizontalOptions="CenterAndExpand"
                                    IsVisible="{Binding HasTodayBalance}">
                                    <controls:ExtendedContentView.GestureRecognizers>
                                        <TapGestureRecognizer Command="{Binding DisplayGodownPageCommand}" />
                                    </controls:ExtendedContentView.GestureRecognizers>

                                    <Grid
                                        BackgroundColor="Transparent"
                                        HorizontalOptions="Center"
                                        RowSpacing="0"
                                        VerticalOptions="Center">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="90" />
                                        </Grid.ColumnDefinitions>
                                        <Grid.RowDefinitions>
                                            <RowDefinition Height="20" />
                                            <RowDefinition Height="40" />
                                        </Grid.RowDefinitions>
                                        <Label
                                            Grid.Row="0"
                                            FontAttributes="Bold"
                                            FontSize="12"
                                            HorizontalOptions="Center"
                                            Text="Today's Bal"
                                            VerticalOptions="End" />
                                        <Label
                                            Grid.Row="1"
                                            FontSize="30"
                                            HorizontalOptions="Center"
                                            Text="200"
                                            VerticalOptions="Start" />
                                    </Grid>
                                </controls:ExtendedContentView>
                            </StackLayout>
                        </controls:ExtendedContentView>

                        <!--  Weather today  -->
                        <controls:ExtendedContentView
                            Margin="5,0"
                            Padding="5"
                            BackgroundColor="White"
                            CornerRadius="10">

                            <Grid x:Name="WeatherTipsGrid" BackgroundColor="White">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*" />
                                    <ColumnDefinition Width="10" />
                                    <ColumnDefinition Width="auto" />
                                    <ColumnDefinition Width="*" />
                                </Grid.ColumnDefinitions>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto" />
                                    <RowDefinition Height="*" />
                                    <RowDefinition Height="*" />
                                    <RowDefinition Height="*" />
                                </Grid.RowDefinitions>
                                <Label
                                    x:Name="WeatherHeaderLabel"
                                    Grid.ColumnSpan="3"
                                    HorizontalTextAlignment="Center"
                                    Text="TODAYS WEATHER REPORT" />
                                <Image
                                    Grid.Row="1"
                                    Grid.Column="1"
                                    HeightRequest="6"
                                    HorizontalOptions="Center"
                                    Source="{toolKitImageResourceExtension:ImageResourceExtension Source=Tulsi.Images.graycircle.png}"
                                    VerticalOptions="Center"
                                    WidthRequest="6" />
                                <Image
                                    Grid.Row="2"
                                    Grid.Column="1"
                                    HeightRequest="6"
                                    HorizontalOptions="Center"
                                    Source="{toolKitImageResourceExtension:ImageResourceExtension Source=Tulsi.Images.graycircle.png}"
                                    VerticalOptions="Center"
                                    WidthRequest="6" />
                                <Image
                                    Grid.Row="3"
                                    Grid.Column="1"
                                    HeightRequest="6"
                                    HorizontalOptions="Center"
                                    Source="{toolKitImageResourceExtension:ImageResourceExtension Source=Tulsi.Images.graycircle.png}"
                                    VerticalOptions="Center"
                                    WidthRequest="6" />
                                <Label
                                    x:Name="WeatherTipOneLabel"
                                    Grid.Row="1"
                                    Grid.Column="2">
                                    <Label.FormattedText>
                                        <FormattedString>
                                            <FormattedString.Spans>
                                                <Span Text="It rained pretty heavy in " />
                                                <Span FontAttributes="Bold" Text="Shimla" />
                                                <Span Text=" today." />
                                            </FormattedString.Spans>
                                        </FormattedString>
                                    </Label.FormattedText>
                                </Label>
                                <Label
                                    x:Name="WeatherTipTwoLabel"
                                    Grid.Row="2"
                                    Grid.Column="2">
                                    <Label.FormattedText>
                                        <FormattedString>
                                            <FormattedString.Spans>
                                                <Span Text="It hailed in " />
                                                <Span FontAttributes="Bold" Text="Kinnaur" />
                                                <Span Text=" today." />
                                            </FormattedString.Spans>
                                        </FormattedString>
                                    </Label.FormattedText>
                                </Label>
                                <Label
                                    x:Name="WeatherTipThreeLabel"
                                    Grid.Row="3"
                                    Grid.Column="2">
                                    <Label.FormattedText>
                                        <FormattedString>
                                            <FormattedString.Spans>
                                                <Span FontAttributes="Bold" Text="Lucknow " />
                                                <Span Text="was very hot today." />
                                            </FormattedString.Spans>
                                        </FormattedString>
                                    </Label.FormattedText>
                                </Label>
                            </Grid>
                        </controls:ExtendedContentView>

