                                </controls:ExtendedContentView>

                                <controls:ExtendedContentView
                                    Grid.Row="2"
                                    Grid.Column="2"
                                    BackgroundColor="#cccccc"
                                    CornerRadius="15"
                                    HeightRequest="30">
                                    <Label
                                        FontAttributes="Bold"
                                        HorizontalTextAlignment="Center"
                                        Text="182.68"
                                        TextColor="White" />
                                </controls:ExtendedContentView>

                                <controls:ExtendedContentView
